rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default: deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Users collection: Each user can only read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      
      // Vitals subcollection
      match /vitals/{vitalDoc} {
        allow read, write: if request.auth.uid == userId;
      }

      // Symptoms subcollection
      match /symptoms/{symptomDoc} {
        allow read, write: if request.auth.uid == userId;
      }

      // Health records subcollection
      match /healthRecords/{recordDoc} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    // Appointments collection (shared between patient & provider)
    match /appointments/{appointmentId} {
      allow read: if request.auth.uid == resource.data.patientId || request.auth.uid == resource.data.providerId;
      allow write: if request.auth.uid == resource.data.patientId;
    }

    // Provider profiles (read-only for patients)
    match /providers/{providerId} {
      allow read: if request.auth != null;
      allow write: if request.auth.uid == providerId;
    }

    // Chat messages (encrypted, peer-to-peer)
    match /chats/{chatId} {
      allow read: if request.auth.uid in resource.data.participants;
      allow write: if request.auth.uid in resource.data.participants;
      
      match /messages/{messageId} {
        allow read: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
        allow create: if request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.participants;
      }
    }
  }
}
